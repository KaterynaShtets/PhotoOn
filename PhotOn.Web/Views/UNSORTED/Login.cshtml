@model SignInViewModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> signinManager
@{
    ViewData["Title"] = "Signin";
    var providers = await signinManager.GetExternalAuthenticationSchemesAsync();
}


<div style="background-image: url(icons/balance_page_bg.png);padding:30px;">

    <br><br><br><br>

    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6" style="padding: 40px;background-color: #ffffffe3;border: solid 1px black;">

            <h1>Log in</h1>

            <hr>

            <form asp-action="SignIn" method="post">

                @Html.ValidationSummary()

                <div class="form-group col-4">
                    <label asp-for="Username"></label>
                    <input type="text" asp-for="Username" />
                </div>

                <div class="form-group col-4">
                    <label asp-for="Password"></label>
                    <input type="password" asp-for="Password" />
                </div>
                <div class="form-group col-4">
                    <input type="checkbox" asp-for="RememberMe" />Remember Me
                </div>
                <p>
                    You can use your social media account to login as well.
                </p>
                <button type="submit" class="btn btn-primary">Sign In</button>
            </form>

            <form asp-action="ExternalLogin" method="post">
                <div class="form-group">
                    @foreach (var provider in providers)
                    {
                        <button type="submit" name="provider" value="@provider.Name" class="btn btn-primary"> 
                            Login with @provider.DisplayName
                        </button>
                    }
                </div>
            </form>
        </div>
        <div class="col-sm-3"></div>
    </div>

    <br>
    <br>
    <br>
    <br>

</div>