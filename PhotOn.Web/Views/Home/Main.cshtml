<!-- empty block, just separator -->
<div class="container" style="max-width: 100%;">
    <div class="row">
        <div class="col-sm-12" style="background-color: #092c5d;">
            <br>
            <br>
            <br>
        </div>
    </div>
</div>

<!-- carousel block -->
<div class="container" style="max-width: 100%;">
    <div class="row" style="padding: 40px 80px;background-color: white;">
        <!-- header -->
        <div class="col-sm-12" style="text-align: center;">
            <h1 style="color: #092c5d;font-weight: 900; font-size: 3.1vw;">
                Discover the world with <span style="color: #55BC75;">PhotOn</span>
            </h1>
        </div>

        <br><br><br><br><br>

        <!-- carousel -->
        <div class="col-sm-3"></div>
        <div class="col-sm-6" style="text-align: center;">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/icons/carousel_1.png" alt="First slide" style="height:350px;object-fit: cover;">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/icons/carousel_2.png" alt="Second slide" style="height:350px;object-fit: cover;">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/icons/carousel_3.png" alt="Third slide" style="height:350px;object-fit: cover;">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-sm-3"></div>

    </div>
</div>

<!-- final block -->
<div class="container" style="max-width: 100%;">
    <div class="row" style="padding: 40px 80px;background-color: #f7a41d;">
        <div class="col-sm-1"></div>

        <!-- text -->
        <div class="col-sm-7">
            <h1 style="color: #092c5d;font-weight: 900; font-size: 3.1vw;">
                It's time to make the most out of your photos!
            </h1>
        </div>
        <!-- button -->
        <div class="col-sm-3">
            <br>
            <div class="col-sm-12" style="text-align: center;">
                <a href="#" class="btn btn-primary" style="padding: 20px 40px;font-size: 25px; font-weight: 700;background-color: #092c5d;border-color: #092c5d;">
                    Get started
                </a>
            </div>
        </div>

        <div class="col-sm-1"></div>
    </div>
</div>

