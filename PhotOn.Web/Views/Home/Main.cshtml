@{
    ViewData["Title"] = "Main";
}

<!-- picture container -->
<div class="container" style="max-width: 100%;">
    <div class="row" style="padding: 40px 80px;background-color: #f7a41d;">
        <!-- small screen picture -->
        <div class="col-sm-12 d-block d-lg-none" style="text-align: center;">
            <img src="~/icons/main_page.png" class="img-fluid" style="max-width: 90%;">
        </div>
        <!-- large screen picture -->
        <div class="col-sm-8 d-none d-lg-block">
            <img src="~/icons/main_page.png" class="img-fluid" style="max-width: 90%;">
        </div>

        <!-- doesn't display on small screens -->
        <div class="col-sm-4 d-none d-lg-block">
            <h1 style="color: #092c5d;font-weight: 900; font-size: 3.1vw;">
                Are you getting the most out of your photos?
            </h1>
            <br>
            <br>
            <br>
            <div style="text-align:right;padding-right: 5.5vw;font-size: 1.3vw;">
                <p style="margin:0;">PhotOn gives you the power to</p>
                <p style="margin:0;"><b>post, find and earn </b></p>
                <p style="margin:0;">from photographs so </p>
                <p style="margin:0;">your works will get </p>
                <p style="margin:0;"><b>the best possible response.</b></p>
            </div>
        </div>

        <!-- small screen button -->
        <div class="col-sm-12 d-block d-md-none" style="text-align: center;">
            <a href="#" class="btn btn-primary" style="margin-top: 20px;padding: 15px 30px;font-size: 15px; font-weight: 600;background-color: #092c5d;border-color: #092c5d;">
                Get started
            </a>
        </div>
        <!-- larger screen button -->
        <div class="col-sm-12 d-none d-md-block" style="text-align: center;">
            <a asp-controller="Account" asp-action="Signin" class="btn btn-primary" style="padding: 20px 40px;font-size: 25px; font-weight: 700;background-color: #092c5d;border-color: #092c5d;">
                Get started
            </a>
        </div>

    </div>
</div>

<!-- video container -->
<div class="container" style="max-width: 100%;">
    <div class="row" style="padding: 40px 80px;background-color: #092c5d;">
        <!-- text and button -->
        <div class="col-sm-5">
            <br>
            <h1 style="color: white;font-weight: 900; font-size: 3.1vw;">
                > Stop waiting for the right moment!
                <br>
                > Take a shot!
                <br>
                > Share it on <span style="color: #55BC75;">PhotOn!</span>
            </h1>



            <!-- larger screen button -->
            <div class="d-none d-xl-block" style="text-align: center;">
                <br><br>
                <a href="#" class="btn btn-primary" style="padding: 20px 40px;font-size: 25px; font-weight: 700;background-color: #f7a41d;border-color: #092c5d;">
                    Get started
                </a>
            </div>
        </div>

        <!-- video -->
        <div class="col-sm-7">
            <video width="100%" height="auto" controls="controls" poster="video/duel.jpg">
                <source src="video/duel.ogv" type='video/ogg; codecs="theora, vorbis"'>
                <source src="video/duel.mp4" type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"'>
                <source src="video/duel.webm" type='video/webm; codecs="vp8, vorbis"'>
                Тег video не поддерживается вашим браузером.
                <a href="video/duel.mp4">Скачайте видео</a>.
            </video>
        </div>

        <!-- small screen button -->
        <div class="col-sm-12 d-block d-xl-none" style="text-align: center;">
            <a href="#" class="btn btn-primary" style="margin-top: 20px;padding: 15px 30px;font-size: 15px; font-weight: 500;background-color: #f7a41d;border-color: #092c5d;">
                Get started
            </a>
        </div>
    </div>
</div>

