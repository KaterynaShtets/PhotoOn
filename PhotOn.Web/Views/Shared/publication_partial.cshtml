@model PublicationViewModel

<div class="col-sm-6" style="text-align: center;padding-bottom: 15px;">
    <!-- image -->
    <img src="@Model.ImageLink" loading="lazy" style="width: 100%;height: 400px;object-fit: cover;">

    <!-- likes, view more, price -->
    <ul style="padding: 20px;list-style-type: none;padding-bottom: 0;margin: 0;">
        <li style="display: inline-block;font-size: 20px;padding-left: 20px;padding-right: 20px;">
            @Model.LikeCount
            <a asp-controller="Publications" asp-action="SetLike" asp-route-publicationId="@Model.Id"><img src="~/icons/like.svg" style="margin-bottom: 5px; width: 18px;height: 18px;"></a>
        </li>

        <li style="display: inline-block;font-size: 20px;padding-left: 20px;padding-right: 20px;">
            <a asp-controller="Publications" asp-action="ViewMore" asp-route-Id="@Model.Id" class="btn btn-primary" style="background-color: #f7a41d;border-radius: 10px;padding: 3px 50px;border: none;">
                View more!
            </a>
        </li>

        <li style="display: inline-block;font-size: 20px;padding-left: 20px;padding-right: 20px;">
            <a asp-controller="User" asp-action="ConfirmPayment" asp-route-publicationId="@Model.Id"><img src="~/icons/add_to_cart.svg" style="margin-bottom: 5px; width: 18px;height: 18px;"></a>
                @Model.Price
</li>
    </ul>
</div>