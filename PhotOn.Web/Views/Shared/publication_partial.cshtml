@model PhotOn.Web.ViewModels.PublicationViewModel

    <div class="col-sm-6" style="text-align: center;padding-bottom: 15px;">
        <!-- title -->
        <h2>@Model.Title</h2>

        <hr />

        <!-- image -->
        <img src="@Model.ImageLink" loading="lazy" style="width: 100%;height: 400px;object-fit: cover;">

        <!-- tags -->
        <p style="display: inline-block;">
            <b>Tags:</b>
        </p>
        <div style="display: inline-block;">
            @foreach (var tag in Model.TagModels)
            {
                <a class="badge badge-success">@tag.Title</a>
            }
        </div>

        <!-- likes, view more, save, price -->
        <ul style="padding: 20px;list-style-type: none;padding-bottom: 0;margin: 0;">
            <li style="display: inline-block;font-size: 20px;padding-left: 20px;padding-right: 20px;">
                @Model.LikeCount
                <img src="icons/like.svg" style="margin-bottom: 5px; width: 18px;height: 18px;">
            </li>

            <li style="display: inline-block;font-size: 20px;padding-left: 20px;padding-right: 20px;">
                <a asp-controller="Publications" asp-action="Details" asp-route-publicationId="@Model.Id" class="btn btn-primary" style="background-color: #f7a41d;border-radius: 10px;padding: 3px 50px;border: none;">
                    View more!
                </a>
                <form method="post" style="display: inline-block;">
                    <input type="hidden" name="publicationId" value="@Model.Id">
                    <input type="submit" value="Save" class="btn btn-success">
                </form>
            </li>

            <li style="display: inline-block;font-size: 20px;padding-left: 20px;padding-right: 20px;">
                <img src="icons/add_to_cart.svg" style="margin-bottom: 5px; width: 18px;height: 18px;">
                @Model.Price
            </li>
        </ul>
    </div>