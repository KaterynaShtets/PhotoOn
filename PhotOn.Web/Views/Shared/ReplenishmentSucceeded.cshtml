@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment env
@{
    ViewData["Title"] = "ReplenishmentSucceeded";
    string path = $"{env.WebRootPath}\\icons\\balance_page_bg.png"
        .Replace(env.WebRootPath, "").Replace(@"\", "/");
}

<!-- separator -->
<img src="~/icons/separator.png" style="width: 100%; height: 20px; object-fit: cover; display: block;">

<div style="background-image:url(@path);padding:30px;text-align:center;">
    <hr />
    <h1>
        The replenishment was successful 💲
        <br />
        Your balance is up-to-date!
    </h1>
    <hr />
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
        Go home
    </a>
</div>

